			images: (
				{
					filename = "venus-boot-image-raspberrypi-raspberrypi2.vfat.gz";
					device = "/dev/mmcblk0p1";
					compressed = true;
				}
			);
		};
		copy1: {
			images: (
				{
					filename = "${VENUS_IMAGE_FILE}";
					device = "/dev/mmcblk0p2";
					compressed = true;
					installed-directly = true;
				}
			);
			uboot: (
				{
					name = "version";
					value = "1";
				}
			);
		};
		copy2: {
			images: (
				{
					filename = "${VENUS_IMAGE_FILE}";
					device = "/dev/mmcblk0p3";
					compressed = true;
					installed-directly = true;
				}
			);
			uboot: (
				{
					name = "version";
					value = "2";
				}
			);
		};
	};
}
